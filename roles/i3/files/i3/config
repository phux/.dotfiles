# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# new window default border
new_window pixel 2
new_float pixel 2

focus_follows_mouse no

force_focus_wrapping no

# set popups during fullscreen mode
popup_during_fullscreen smart

# Back and Forth
workspace_auto_back_and_forth no

# bindsym $mod+p workspace prev
bindsym $mod+Shift+G mark "pomo", move scratchpad
bindsym $mod+g [con_mark="pomo"] scratchpad show

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier Mod1

# start a terminal
bindsym $mod+Return exec urxvtc

# kill focused window
bindsym $mod+Shift+Q kill

# start dmenu (a program launcher)
bindsym $mod+i exec "rofi -combi-modi window,drun -show combi -modi combi"

# next/previous workspace
bindsym Mod1+Tab focus right
bindsym $mod+Tab workspace back_and_forth

# Start common apps
bindsym $mod+Shift+Return exec chromium-browser

# Change focused window
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+h focus left

# Move focused window
bindsym $mod+Shift+J move down 50px
bindsym $mod+Shift+K move up 50px
bindsym $mod+Shift+L move right 50px
bindsym $mod+Shift+H move left 50px

# Resize Containers, Vim-style
bindsym $mod+Control+j resize grow height 15 px or 15 ppt
bindsym $mod+Control+k resize shrink height 15 px or 15 ppt
bindsym $mod+Control+l resize grow width 15 px or 15 ppt
bindsym $mod+Control+h resize shrink width 15 px or 15 ppt

# pulse audio volume control
bindsym $mod+Up exec --no-startup-id ~/.i3/audio.sh raise
bindsym XF86AudioRaiseVolume exec ~/.i3/audio.sh raise
bindsym $mod+Down exec --no-startup-id ~/.i3/audio.sh lower
bindsym XF86AudioLowerVolume exec ~/.i3/audio.sh lower
bindsym $mod+Shift+s exec --no-startup-id ~/.i3/audio.sh mute
bindsym XF86AudioMute exec ~/.i3/audio.sh mute

bindsym $mod+Right exec sudo brightnessctl s +10% # increase screen brightness
bindsym $mod+Left exec sudo brightnessctl s 10%- # decrease screen brightness
bindsym XF86MonBrightnessUp exec sudo brightnessctl s +10% # increase screen brightness
bindsym XF86MonBrightnessDown exec sudo brightnessctl s 10%- # decrease screen brightness

# resize window (you can also use the mouse for that)
mode "resize" {
# These bindings trigger as soon as you enter the resize mode
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym 113 resize shrink width 10 px or 10 ppt
    bindsym 116 resize grow height 10 px or 10 ppt
    bindsym 111 resize shrink height 10 px or 10 ppt
    bindsym 114 resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# split in horiZontal orientation (Tall)
# toggle splitting mode
bindsym $mod+Shift+b layout toggle split
# need to change this because "Mod+h" no longer free
# bindsym $mod+n split h
# split in vertical orientation
bindsym $mod+Shift+n split v


# go fullscreen
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, default)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+d layout default
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+Shift+c focus parent

# focus the child container
bindsym $mod+c focus child

# switch to urgent workspace
bindsym $mod+u [urgent=latest] focus

# keyboard layouts
bindsym $mod+Control+d exec setxkbmap de
bindsym $mod+Control+u exec setxkbmap us

# scratchpad
bindsym $mod+m move scratchpad
bindsym $mod+o scratchpad show

# switch to next workspace
bindsym $mod+semicolon workspace next

# switch to workspace
bindsym $mod+1 workspace number 1
# bindsym $mod+2 workspace number 2; exec idea
bindsym $mod+2 workspace number 2
# bindsym $mod+3 workspace number 3; exec [ $(ps h -C mysql-workbench | wc -l) = 0 ] && mysql-workbench
bindsym $mod+3 workspace number 3; exec [ $(ps h -C datagrip.sh | wc -l) = 0 ] && ~/Downloads/DataGrip-2019.2.5/bin/datagrip.sh
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9; exec [ $(ps h -C spotify | wc -l) = 0 ] && spotify; exec [ $(ps h -C slack | wc -l) = 0 ] && slack
bindsym $mod+0 workspace number 10; exec [ $(ps h -C chromium-browser | wc -l) = 0 ] && chromium-browser

# bind workspace to display
workspace 1 output HDMI1
workspace 2 output DP1
workspace 9 output DP1
workspace 10 output DP1

# move focused container to workspace
bindsym $mod+Shift+exclam move container to workspace 1; workspace 1
bindsym $mod+Shift+at move container to workspace 2; workspace 2
bindsym $mod+Shift+numbersign move container to workspace 3; workspace 3
bindsym $mod+Shift+dollar move container to workspace number 4; workspace 4
bindsym $mod+Shift+percent move container to workspace number 5
bindsym $mod+Shift+asciicircum move container to workspace number 6
bindsym $mod+Shift+ampersand move container to workspace number 7
bindsym $mod+Shift+asterisk move container to workspace 8; workspace 8
bindsym $mod+Shift+parenleft move container to workspace 9; workspace 9
bindsym $mod+Shift+parenright move container to workspace 10; workspace 10

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+E exit

###  ADDED KEY BINDINGS  ###
bindsym $MOD+SHIFT+f exec thunar
bindsym $MOD+SHIFT+o exec urxvt -e 'ranger'
bindsym Mod1+Return exec ~/.vim-anywhere/bin/run
bindsym $MOD+n exec joplin-gui
bindsym $MOD+p exec keepassxc
# bindsym $MOD+SHIFT+m exec mysql-workbench
bindsym $mod+Shift+p exec sh ~/.i3/i3lock.sh
# bindsym Print exec scrot '%Y-%m-%d-%T_$wx$h_scrot.png' -e 'mv $f ~/Pictures/screenshots/'
bindsym Print exec gnome-screenshot -i

# workspace targeting
assign [class="Chromium"] 10
assign [class="Firefox"] 10
assign [class="Slack"] 9
assign [class="Spotify"] 8
assign [class="Mysql-workbench-bin"] 3
assign [class="jetbrains-idea-ce"] 2

# default floating applications
for_window [class="Xfce4-notifyd"] border none
for_window [class="Xfce4-notifyd"] floating enable
for_window [class="PomoDoneApp"] floating enable
for_window [class="Gnome-calculator"] floating enable

# disable screensaver; needed for autorandr, otherwise I get logged out in certain cable plugin scenarios :D
exec xset -dpms; xset s off

